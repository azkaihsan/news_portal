---
import NewsPortalWrapper from '../../components/NewsPortalWrapper.jsx';
import { fetchCountries } from '../../services/api.js';

export async function getStaticPaths() {
  const countries = await fetchCountries();
  return countries.map((country: { id: number; name: string; code: string }) => ({
    params: { countryCode: country.id.toString() },
    props: { country }
  }));
}

const { country } = Astro.props as { country: { name: string } };
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/pelita-logo.png" />
  <title>News from {country.name} - News Portal</title>
</head>
<body>
  <NewsPortalWrapper client:only="react" />
</body>
</html>
